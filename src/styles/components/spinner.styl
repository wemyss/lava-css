$spinner_size := 14px
$spinner_anim_delay := -0.17s
$spinner_anim_duration := 1.2s

.spinner
   margin: 100px auto 0
   width: 70px
   text-align: center

.spinner > div
   display: inline-block
   border-radius: 100%
   width: $spinner_size
   height: $spinner_size
   animation: spinner-bouncedelay $spinner_anim_duration infinite ease-in-out both

.spinner .bounce1
   animation-delay: $spinner_anim_delay * 2


.spinner .bounce2
   animation-delay: $spinner_anim_delay


@keyframes spinner-bouncedelay
   0%, 80%, 100%
      transform: scale(0)

   40%
      transform: scale(1.0)
